extends layout

block content
    div.register
        if post               
            if !success
                p Villa við að útbúa notanda
            else
                p Notandi búinn til
                a( href='/login' ) Skráðu þig inn hér     
        if errors
            if errors.length
                ul
                    each err in errors
                        li= 'Villa í reitnum '+ err.name
        form( method='post', action='/register')   
            div.form-group
                label( for='user' )
                    | Notendanafn:
                    input.form-control( type='text' id='user' name='user' )
            div.form-group
                label( for='pass' )
                    |Lykilorð:
                    input.form-control( type='password' id='pass' name='pass' )
            button.btn Nýskrá     
    a( href='/login') eða skráðu þig inn