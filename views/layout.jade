doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
  body  
    div.container-fluid
        div#carousel.carousel.slide(data-ride='carousel')
            ol.carousel-indicators
                li(data-target='#carousel' data-slide-to='0' class='active')
                li(data-target='#carousel' data-slide-to='1')
            div.carousel-inner(role='list-box')
                div.item.active
                    img.center-block.first-slide(src='/img/Banner4.jpg')
                div.item
                    img.center-block.second-slide(src='/img/Banner5.jpg')
            a.left.carousel-control(href='#carousel' role='button' data-slide='prev')
                span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
                span.sr-only Previous
            a.right.carousel-control(href='#carousel' role='button' data-slide='next')
                span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
                span.sr-only Next
    div#head
        div#headtitle
            h1= title
        div
            nav.navbar.navbar-default
                div.container-fluid
                    div.navbar-header
                        button.navbar-toggle( type='button' data-toggle='collapse' data-target='#myNav' )
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='/') Heim
                    div.collapse.navbar-collapse#myNav
                        ul.nav.navbar-nav
                            li
                                a(href='/diary') Dagbók
                        ul.nav.navbar-nav.navbar-right
                            if user
                                li
                                    a(href='/user') #{user.username}
                                li
                                    a(href='/logout') Útskráning
                            else
                                li
                                    a(href='/login') Skrá inn
                                li
                                    a(href='/register') Nýskráning
    div#content
        block content
    
    script( src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js' )    
    script( src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js' )