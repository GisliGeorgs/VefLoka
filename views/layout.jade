doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link( rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css' )
  body
    nav#head
        div#headtitle
            h1= title
        div
            nav.nav.navbar-default
                div.container-fluid
                    div.navbar-header
                        button.navbar-toggle.collapsed
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='#') Dagbók/eh
                    div.collapse.navbar-collapse
                        ul.nav.navbar-nav
                            li
                                a(href='/') Heim
                            li
                                a(href='/diary') Dagbók
                        ul.nav.navbar-nav.navbar-right
                            if user
                                li
                                    a(href='/user') #{user.username}
                                li
                                    a(href='/logout') Útskráning
                            else
                                li
                                    a(href='/login') Skrá inn
    div#content
        block content