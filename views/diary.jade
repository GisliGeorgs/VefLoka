extends layout

block content
    div.diary.container-fluid
        div.row
            div.list-group.entries3.col-sm-3
                if( !entries || entries.length == 0 )
                    p Engar færslur
                else
                    for entry in entries    
                        a.list-group-item( href='/entry?id='+ entry.id )
                            h4= entry.title
                            p= entry.date
            div.newEntry.col-sm-9.clearfix.form-group
                form( method='post', action='diary' )
                    if post                        
                        if error
                            p Villa kom upp við gerð nýrrar færslu
                    div.form-group
                        label.col-sm-12.control-label( for='title' )
                            | Titill
                        input.form-control( type='text' id='title' name='title' placeholder='Titill')
                    div.form-group
                        label.col-sm-12.control-label( for='text' )
                            | Texti     
                        textarea.form-control( rows='5' id='text' name='text' placeholder='Skrifaðu texta hér' ) Nú með Markdown stuðningi. 
                    div.form-group
                        div.checkbox
                            label( for='public' )
                                input( type='checkbox' id='public' name='public' )
                                | Þetta er opinber færsla
                    button.btn.btn-lg.pull-left.btn-primary.glyphicon.glyphicon-ok  Skrá færslu