	//Carousel Begin	
	div#carousel.carousel.slide(data-ride='carousel')
		ol.carousel-indicators
			li(data-target='#carousel' data-slide-to='0' class='active')
			li(data-target='#carousel' data-slide-to='1' class='active')
	div.carousel-inner(role='list-box')
		div.item.active: img.center-block(src='public/img/Banner1.png')
		div.item: img.center-block(src='public/img/Banner2.jpg')
	a.left.carousel-control(href='#carousel' role='button' data-slide='previous')
		span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
		span(sr-only='true') Previous
	a.right.carousel-control(href='#carousel' role='button' data-slide='next')
		span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
		span(sr-only='true') Next  
	//Carousel End
	
    div.diary.container-fluid
        div.list-group.entries3.col-sm-2
            if( !entries || entries.length == 0 )
                p Engar færslur
            else
                for entry in entries    
                    a.list-group-item( href='/entry?id='+ entry.id )= entry.title
        div.newEntry.col-sm-8.clearfix
            form.form-horizontal( method='post', action='diary' )
                if post                        
                    if error
                        p Villa kom upp við gerð nýrrar færslu
                div.form-group
                    label.col-sm-2.control-label( for='title' )
                        | Titill
                    div.col-sm-8
                        input.form-control( type='text' id='title' name='title' placeholder='Titill')
                div.form-group
                    label.col-sm-2.control-label( for='text' )
                        | Texti                    
                    div.col-sm-8
                        textarea.form-control( rows='5' id='text' name='text' placeholder='Skrifaðu texta hér' ) 
                button.btn.btn-lg.pull-left.btn-primary.glyphicon.glyphicon-ok Skrá færslu
